<?xml version="1.0" encoding="utf-8"?>
<!-- Purple button with state selector -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_dark" />
            <corners android:radius="8dp" />
            <padding
                android:bottom="12dp"
                android:left="24dp"
                android:right="24dp"
                android:top="12dp" />
        </shape>
    </item>
    
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_lite" />
            <corners android:radius="8dp" />
            <padding
                android:bottom="12dp"
                android:left="24dp"
                android:right="24dp"
                android:top="12dp" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <corners android:radius="8dp" />
            <padding
                android:bottom="12dp"
                android:left="24dp"
                android:right="24dp"
                android:top="12dp" />
        </shape>
    </item>
</selector>
